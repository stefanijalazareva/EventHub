@model IEnumerable<EventHub.Domain.DTO.TicketDto>

@{
    ViewData["Title"] = "My Tickets";
}

<h1><i class="bi bi-ticket-perforated"></i> My Tickets</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    @foreach (var ticket in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header @(ticket.Status == EventHub.Domain.DomainModels.TicketStatus.Active ? "bg-success" : "bg-danger") text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-ticket-detailed"></i> @ticket.TicketNumber
                        <span class="badge bg-white text-dark float-end">@ticket.Status</span>
                    </h6>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ticket.EventName</h5>
                    <p class="card-text">
                        <i class="bi bi-calendar"></i> @ticket.PurchaseDate.ToString("MMM dd, yyyy")<br>
                        <i class="bi bi-cash"></i> <strong>@ticket.Price.ToString("C")</strong>
                    </p>
                    @if (!string.IsNullOrEmpty(ticket.SeatNumber))
                    {
                        <p><i class="bi bi-geo-alt"></i> Seat: <strong>@ticket.SeatNumber</strong></p>
                    }
                </div>
                @if (ticket.Status == EventHub.Domain.DomainModels.TicketStatus.Active)
                {
                    <div class="card-footer bg-white">
                        <form asp-action="Cancel" asp-route-id="@ticket.Id" method="post" 
                              onsubmit="return confirm('Are you sure you want to cancel this ticket?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                <i class="bi bi-x-circle"></i> Cancel Ticket
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle fs-3"></i>
        <p class="mb-0 mt-2">You haven't booked any tickets yet.</p>
        <a asp-controller="Events" asp-action="Index" class="btn btn-primary mt-3">
            <i class="bi bi-calendar3"></i> Browse Events
        </a>
    </div>
}
