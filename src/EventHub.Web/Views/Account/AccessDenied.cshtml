@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0 text-center">
                    <i class="bi bi-exclamation-triangle"></i> Access Denied
                </h3>
            </div>
            <div class="card-body text-center">
                <p class="lead">You do not have permission to access this page.</p>
                <p class="text-muted">Please contact an administrator if you believe this is an error.</p>
                
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house"></i> Go to Home
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
