@model IEnumerable<EventHub.Domain.DTO.AttendeeDto>

@{
    ViewData["Title"] = "Attendees";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> Registered Attendees</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Register New Attendee
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Date of Birth</th>
                        <th>City</th>
                        <th>Registered</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var attendee in Model)
                    {
                        <tr>
                            <td>
                                <strong>@attendee.FirstName @attendee.LastName</strong>
                            </td>
                            <td>
                                <i class="bi bi-envelope"></i> @attendee.Email
                            </td>
                            <td>
                                <i class="bi bi-telephone"></i> @attendee.PhoneNumber
                            </td>
                            <td>@attendee.DateOfBirth.ToString("MMM dd, yyyy")</td>
                            <td>@attendee.Address</td>
                            <td>
                                <small class="text-muted">@attendee.RegisteredAt.ToString("MMM dd, yyyy")</small>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@attendee.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@attendee.Id" class="btn btn-outline-secondary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-4">
        <i class="bi bi-info-circle fs-3"></i>
        <p class="mb-0 mt-2">No attendees registered yet.</p>
    </div>
}
