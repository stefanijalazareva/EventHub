@model IEnumerable<EventHub.Domain.DTO.EventDto>

@{
    ViewData["Title"] = "Events";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-calendar3"></i> All Events</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Event
        </a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <label class="form-label">Filter by Category</label>
                <select name="category" class="form-select" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat" selected="@(cat == ViewBag.SelectedCategory)">@cat</option>
                    }
                </select>
            </div>
            <div class="col-md-5">
                <label class="form-label">Filter by City</label>
                <select name="city" class="form-select" onchange="this.form.submit()">
                    <option value="">All Cities</option>
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city" selected="@(city == ViewBag.SelectedCity)">@city</option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <a asp-action="Index" class="btn btn-secondary w-100">
                    <i class="bi bi-arrow-clockwise"></i> Reset
                </a>
            </div>
        </form>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card event-card h-100">
                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/400x200?text=" + Uri.EscapeDataString(item.Name) : item.ImageUrl)" 
                     class="card-img-top event-image" alt="@item.Name">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title">@item.Name</h5>
                        <span class="badge bg-primary badge-category">@item.Category</span>
                    </div>
                    <p class="card-text">
                        <small class="text-muted">
                            <i class="bi bi-geo-alt"></i> @item.City<br>
                            <i class="bi bi-calendar"></i> @item.StartDate.ToString("MMM dd, yyyy HH:mm")<br>
                            <i class="bi bi-person"></i> @item.Organizer
                        </small>
                    </p>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-success fw-bold fs-5">@item.TicketPrice.ToString("C")</span>
                        <span class="badge @(item.AvailableTickets > 10 ? "bg-success" : item.AvailableTickets > 0 ? "bg-warning" : "bg-danger")">
                            @item.AvailableTickets / @item.TotalTickets available
                        </span>
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <div class="btn-group w-100" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle fs-3"></i>
        <p class="mb-0 mt-2">No events found matching your criteria.</p>
    </div>
}
